<%- include('partials/header'); -%>
<center>
    <div class="indexHeading">
        <h2>Welcome to My Favourite Tune Website</h2>
    </div>
</center>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <center>
                <h4><u>Your Favourite Artists</u></h4>
                <% if(newArtistData.length == 0){ %>
                    <h4>List is empty</h4>
                <% }else{ %>
                <ul class="nodot">
                    <% newArtistData.forEach(item => { %>
                    <li>
                        <div class="card w-50">
                            <div class="card-body">
                                <h5 class="card-title"><%= item %></h5>
                            </div>
                        </div>
                        
                    </li>
                    <% }); %>
                </ul>
                <% } %>
            </center>
        </div>
        <div class="col-md-6 col-sm-12">
            <center>
                <h4><u>Your Favourite Songs </u></h4>
                <% if(newSongData.length == 0){ %>
                    <h4>List is empty</h4>
                <% }else{ %>
                <ul class="nodot">
                    <% newSongData.forEach(item => { %>
                    <li>
                        <div class="card w-50">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.songname%></h5>
                                <p class="card-text">Artist: <%= item.artist%> </p>
                            </div>
                        </div>
                    </li>
                    <% }); %>
                </ul>
                <% } %>
            </center>
        </div>
    </div>

</div>

<%- include('partials/footer'); -%>
